<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center">
  <h2>Product</h2>
  <a href="/admin/products/add-product" class="btn btn-primary">+</a>
</div>

<% if (products.length > 0) { %>
<table class="table table-striped">
  <thead>
    <tr class="home">
      <th>name</th>
      <th>price</th>
      <th>category</th>
      <th>image</th>
      <th>edit</th>
      <th>delete</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach((product) => { %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.category %></td>
      <td>
        <img
          style="width: 100px"
          src="/product-images/<%= product._id %>/<%= product.image %>"
        />
      </td>
      <td>
        <a href="/admin/products/<%= product._id %>/edit">edit</a>
      </td>
      <td>
        <form
          action="/admin/products/<%= product._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<% } else { %>
<div>
  <h3>nothing to show.</h3>
</div>

<% } %> <%- include('../partials/footer') %>
